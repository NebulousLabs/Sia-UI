{
  "name": "Sia-UI",
  "version": "0.4.0",
  "main": "app/index.js",
  "author": "NebulousLabs",
  "description": "A UI application for interfacing with Sia",
  "license": "MIT",
  "devDependencies": {
    "electron-packager": "latest",
    "electron-prebuilt": "latest",
    "ink-docstrap": "^0.5.2",
    "jsdoc": "latest",
    "jshint": "latest",
    "node-inspector": "^0.11.1"
  },
  "scripts": {
    "start": "electron .",
    "dependencies": "npm run sia-repo && npm run sia-master && npm run sia-import",
    "clean": "rm -rf build node_modules app/dependencies app/config.json **/*.swp npm-debug.log",
    "fresh": "npm run clean && npm install && npm start",
    "debug": "node-inspector & electron --debug=5858 . & xdg-open http://127.0.0.1:8080/debug?ws=127.0.0.1:8080&port=5858",
    "lint": "jshint . --verbose --exclude=node_modules",
    "doc": "jsdoc -c .jsdocrc",
    "sia-repo": "test -d $GOPATH/src/github.com/NebulousLabs/Sia || go get -u github.com/NebulousLabs/Sia/...",
    "sia-master": "(cd $GOPATH/src/github.com/NebulousLabs/Sia && git fetch && git pull && git checkout master && make dependencies && make)",
    "sia-import": "test -d app/dependencies/Sia || mkdir -p app/dependencies/Sia && cp $GOPATH/bin/siad app/dependencies/Sia",
    "build": "npm run build-cmd -- --all",
    "build-lin64": "npm run build-cmd -- --platform=linux --arch=x64",
    "build-lin32": "npm run build-cmd -- --platform=linux --arch=ia32",
    "build-win64": "npm run build-cmd -- --platform=win32 --arch=x64",
    "build-win32": "npm run build-cmd -- --platform=win32 --arch=ia32",
    "build-mac": "npm run build-cmd -- --platform=darwin --arch=x64",
    "build-cmd": "electron-packager . Sia-UI --version=0.30.0 --prune --ignore='doc|build' --out=build --icon=app/assets/logo/sia.svg"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/NebulousLabs/test-ui.git"
  },
  "bugs": {
    "url": "https://github.com/NebulousLabs/test-ui/issues"
  },
  "dependencies": {
    "bignumber.js": "^2.0.7"
  }
}
